{
  "include": ["**/*.js", "**/*.ts", "**/*.json", "package.json", "declarations.d.ts"],
  "exclude": ["dist", "node_modules", "**/jest.config.js", "babel.config.js", "scripts/*.js", "jest-puppeteer.config.js"],
  "compilerOptions": {
    "target": "ES2021",
    "esModuleInterop": true,
    "sourceMap": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2021", "dom"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./declarations.d.ts", "./node_modules/@types"],
    "types": ["node", "jest"],
    "allowJs": true
  },
  "ts-node": {
    "files": true
  },
  "files": [
    "declarations.d.ts"
  ],
}
